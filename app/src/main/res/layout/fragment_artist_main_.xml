<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Frament.FragmentMainActivity">

    <FrameLayout
        android:id="@+id/artist_frame"
        android:layout_width="417dp"
        android:layout_height="600dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_Nav_artist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.367">

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/btn_Nav_artist"
        android:layout_width="417dp"
        android:layout_height="65dp"
        android:background="@color/black"
        app:itemIconTint="@drawable/menu_selector_color"
        app:itemTextColor="@drawable/menu_selector_color"
        android:paddingBottom="3dp"
        app:itemIconSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/artist_frame"
        app:menu="@menu/artist_nav_item" />

</androidx.constraintlayout.widget.ConstraintLayout>