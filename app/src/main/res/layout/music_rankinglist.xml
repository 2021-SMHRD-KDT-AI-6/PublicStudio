<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_blue"
    android:orientation="vertical">

    <!--    <androidx.cardview.widget.CardView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="110dp"-->
    <!--        android:backgroundTint="@android:color/background_light"-->
    <!--        android:orientation="horizontal"-->
    <!--        app:cardCornerRadius="35dp"-->
    <!--        app:cardElevation="10dp">-->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_margin="8dp"
        android:clickable="true"
        android:elevation="10dp"
        android:foreground="@color/cardview_shadow_end_color"
        android:orientation="horizontal"
        app:cardCornerRadius="22dp"
        app:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="6dp">


            <TextView
                android:id="@+id/ranksingername"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="35dp"
                android:ellipsize="marquee"
                android:fontFamily="@font/nanumgothic"
                android:text="sokodomo"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/rankmusicImg"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="2dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:src="@drawable/sokodomo" />


            <TextView
                android:id="@+id/rankmusciName"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/nanumgothic"
                android:text="회전목마"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/rankartistbtn"
                android:layout_width="59dp"
                android:layout_height="61dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:layout_marginRight="5dp"
                app:srcCompat="@drawable/url" />

            <ImageView
                android:id="@+id/ranknum"
                android:layout_width="50dp"
                android:layout_height="69dp"
                app:srcCompat="@drawable/rk" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>