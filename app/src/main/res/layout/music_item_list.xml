<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_blue"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="106dp"
        android:layout_margin="8dp"
        android:clickable="true"
        android:elevation="10dp"
        android:foreground="@color/cardview_shadow_end_color"
        android:orientation="horizontal"
        app:cardCornerRadius="22dp"
        app:cardElevation="1dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="109dp"

            android:background="@color/white"
            android:orientation="vertical"
            android:padding="6dp">


            <TextView
                android:id="@+id/singername"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="33dp"
                android:fontFamily="@font/nanumgothic"
                android:text="sokodomo"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Hashtag2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="188dp"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/nanumgothic"
                android:text="#부드러운"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!--            <ImageButton-->
            <!--                android:id="@+id/artist_delete"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="44dp"-->
            <!--                android:layout_alignParentEnd="true"-->
            <!--                android:layout_alignParentRight="true"-->
            <!--                android:layout_marginEnd="19dp"-->
            <!--                android:layout_marginRight="9dp"-->
            <!--                android:background="@color/white"-->
            <!--                app:srcCompat="@drawable/baseline_highlight_off_black_18" />-->

            <TextView
                android:id="@+id/Hashtag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/nanumgothic"
                android:text="#일상적인"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/musicImg"
                android:layout_width="111dp"
                android:layout_height="102dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="2dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:src="@drawable/baseline_camera_alt_black_36" />

            <TextView
                android:id="@+id/Hashtag3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/nanumgothic"
                android:text="#일상적인"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/musciName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/nanumgothic"
                android:text="회전목마"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/rankartistbtn"
                android:layout_width="55dp"
                android:layout_height="33dp"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/backspace" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>